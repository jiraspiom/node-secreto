<%- include ("./partials/header.ejs") %>


<div class="fixed-action-btn click-to-toggle" > 
    <a href="/" class="btn-floating btn-large green-blue"><i class="material-icons">add</i></a>

    </a>
</div>

<div class="row">
    <div class="col s12 m3"></div>
    <form class="col s12 m6" action="/" method="POST">
        <div class="card  blue-grey darken-2">
            <div class="card-content white-text">
                <span class="card-title"></span>
                <label for="segredo"></label>
                <textarea name="segredo" id="segredo" 
                placeholder="you need help..." class="materialize-textarea white-text" maxlength="264" required
                oninvalid="this.setCustomValidity('<%= mensagem %>')" onchange="try{setCustomValidity('')}catch(e){}" ></textarea>
                <button class="btn waves-effect waves-light pulse" style="float: right;">Tellme</button>
            </div>
        </div>
    </form>
    <div class="col s12 m3"></div>
</div>

<% segredos.forEach(segredo => { %>
    <div class="row">
        <div class="col s12 m3"></div>
        <div class="col s12 m6">
            <% if (segredo.cor == undefined) { %>
                <div class="card blue-grey %>">
            <% } else {%>
                <div class="card <%= segredo.cor %>">
            <% } %> 
          
                <div class="card-content white-text">
                    <span class="card-title"></span>
                    <p><%= segredo.segredo %> </p>
                </div>
                <div class="card-action">
                    <a href="/">good</a>
                </div>
            </div>
        </div>
        <div class="col s12 m3"></div>
    </div>
<% }) %>


<%- include ("./partials/footer.ejs") %>
